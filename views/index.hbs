                  <div class="form-row">
                    <div class="col-xs-3">
                      <label class="radio-inline" id="radio">
                        <input ng-model="tipValue" type="radio" value="2" name="optradio">$2<span class="checkmark"
                          checked="checked"></span>
                        <span class="checkmark"></span>
                      </label>
                    </div>
                    <div class="col-xs-3">
                      <label class="radio-inline" id="radio">
                        <input ng-model="tipValue" type="radio" value="5" name="optradio">$5<span
                          class="checkmark"></span>
                        <span class="checkmark"></span>
                      </label>
                    </div>
                    <div class="col-xs-3">
                      <label class="radio-inline" id="radio">
                        <input ng-model="tipValue" type="radio" value="10" name="optradio">$10<span
                          class="checkmark"></span>
                        <span class="checkmark"></span>
                      </label>
                    </div>
                    <div class="col-xs-3">
                      <label class="radio-inline" id="radio">
                        <input ng-model="tipValue" type="radio" value="20" name="optradio">$20<span
                          class="checkmark"></span>
                        <span class="checkmark"></span>
                      </label>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="dropdown-divider"></div>
            <div class="row">
              <div class="col-lg-12">
                <div class="form-group">
                  <textarea class="form-control" name="message" id="tipMessage" cols="30" rows="3"
                    placeholder="Leave a message of support(optional)..."></textarea>
                </div>
              </div>
            </div>
            <div class="dropdown-divider"></div>
            <div class="row">
              <div class="col-lg-12">
                <h4>PAYMENT DETAILS</h4>
                <div class="form-group">
                  {{!-- <div class="radio" id="radio">
                                       <label for="paypal">
                                          <input type="radio" name="payment" id="paypal" value="payment"><i class="fab fa-paypal"></i>Paypal
                                          <span class="checkmark"></span>
                                       </label>
                                    </div> --}}
                  {{# if cardOptions}}
                  <div class="radio" id="radio">
                    <label for="saved">
