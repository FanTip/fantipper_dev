<div class="modal fade" id="shareTip" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="recieve-title">Tip Recieved!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-3">
            <img src="" alt="" class="rounded-circle" height="100px" width="100px" id="tippeeImgLocation">
          </div>
          <div class="col-md-9">
            <q><span id="tippeesDesc">Thank you for your support!</span></q>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-md-12">
            <p class="text-center" id="desc1">Your tip was successfully sent to <span id="tippeesName"></span>.</p>
            <p class="text-center" id="desc2">share your tip and share the love!</p>
            <a class="text-center" href="" id="receipt_link">View the receipt</a>
          </div>
        </div>
        <div class="form-group">
          <button class="btn btn-primary form-control" id="facebook"><i id="i" class="fab fa-facebook-f"></i>Share it on
            Facebook</button>
          <button class="btn btn-primary form-control" id="twittr"><i class="fab fa-twitter"></i>Tweet it!</button>
        </div>
      </div>
      {{!-- <div class="modal-footer"></div> --}}
    </div>
  </div>
</div>

