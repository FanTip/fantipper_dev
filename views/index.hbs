      <div
        class="modal fade"
        id="tipCreator"
        tabindex="-1"
        role="dialog"
        aria-labelledby="tipCreatorLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">
                Tip {[{header}]}
              </h4>
              <button
                class="close"
                ng-click="hideGuest();"
                type="button"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">
                  &times;
                </span>
              </button>
            </div>
            <div class="modal-body">
              {{! Initializing the stripe.js library }}
              <script src="http://js.stripe.com/v3/"></script>
              <form id="tipping-form" name="tippingForm" class="tipping-form">
                <div class="row">
                  <div class="col-lg-3">
                    <img
                      src="{[{image}]}"
                      alt=""
                      class="rounded-circle"
                      height="100px"
                      width="100px"
                      id="receiver_image"
                    />
                  </div>
                  <div class="col-lg-9">
                    <div class="form-group">
                      <label for="tipamount">
                        HOW MUCH WOULD YOU LIKE TO TIP?
                      </label>
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span
                            class="input-group-text"
                            style="{color: #00d278}"
                          >
                            $
                          </span>
                        </div>
                        <input
                          type="text"
                          name="tipamount"
                          id="tipamount"
                          check-if-number
                          ng-model="tipValue"
                          value=""
                          class="form-control"
                          required
                        />
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="form-row">
                        <div class="col-xs-3">
                          <label class="radio-inline" id="radio">
                            <input
                              ng-model="tipValue"
                              type="radio"
                              value="2"
                              name="optradio"
                            />
                            $2
                            <span class="checkmark" checked="checked"></span>
                            <span class="checkmark"></span>
                          </label>
                        </div>
                        <div class="col-xs-3">
                          <label class="radio-inline" id="radio">
                            <input
                              ng-model="tipValue"
                              type="radio"
                              value="5"
                              name="optradio"
                            />
                            $5
                            <span class="checkmark"></span>
                            <span class="checkmark"></span>
                          </label>
                        </div>
                        <div class="col-xs-3">
                          <label class="radio-inline" id="radio">
                            <input
                              ng-model="tipValue"
                              type="radio"
                              value="10"
                              name="optradio"
                            />
                            $10
                            <span class="checkmark"></span>
                            <span class="checkmark"></span>
                          </label>
                        </div>
                        <div class="col-xs-3">
                          <label class="radio-inline" id="radio">
                            <input
                              ng-model="tipValue"
                              type="radio"
                              value="20"
                              name="optradio"
                            />
                            $20
                            <span class="checkmark"></span>
                            <span class="checkmark"></span>
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="dropdown-divider"></div>
                <div class="row">
                  <div class="col-lg-12">
                    <div class="form-group">
                      <textarea
                        class="form-control"
                        name="message"
                        id="tipMessage"
                        cols="30"
                        rows="3"
                        placeholder="Leave a message of support(optional)..."
                      ></textarea>
                    </div>
                  </div>
                </div>
                <div class="dropdown-divider"></div>
                <div class="row">
                  <div class="col-lg-12">
                    <h4>
                      PAYMENT DETAILS
                    </h4>
                    <div class="form-group">
                      {{! <div class="radio" id="radio">
                                       <label for="paypal">
                                          <input type="radio" name="payment" id="paypal" value="payment"><i class="fab fa-paypal"></i>Paypal
                                          <span class="checkmark"></span>
                                       </label>
                                    </div> }}
                      {{#if cardOptions}}
                        <div class="radio" id="radio">
                          <label for="saved">
                            <input
                              type="radio"
                              name="payment"
                              id="saved"
                              value="payment"
                            />
                            <i class="far fa-credit-card"></i>
                            Saved Credit Card
                            <small id="preview_card"></small>
                            <span class="checkmark"></span>
                          </label>
                        </div>
                      {{/if}}

                      <div class="radio" id="radio">
                        <label for="new">
                          <input
                            type="radio"
                            name="payment"
                            id="new"
                            value="payment"
                          />
                          <i class="far fa-credit-card"></i>
                          Credit Card
                          <span class="checkmark"></span>
                        </label>
                      </div>
                    </div>

                    <div class="form-group">
                      <label for="card-element" id="new_label">
                        Credit or debit card
                      </label>
                      <div id="card-element">
                        <!-- A Stripe Element will be inserted here. -->
                      </div>
                      <!-- Used to display form errors. -->
                      <div id="card-errors" role="alert"></div>
                    </div>
                    <style>
                      .StripeElement {
                          {
                            {
                             !-- box-sizing: border-box;
                            --
                          }
                        }

                        height: 40px;
                        width : 100%;
                        padding: 10px 12px;

                        border: 1px solid transparent;
                        border-radius: 4px;
                        background-color: white;

                        box-shadow: 0 1px 3px 0 #e6ebf1;
                        -webkit-transition: box-shadow 150ms ease;
                        transition: box-shadow 150ms ease;
                      }

                      .StripeElement--focus {
                        box-shadow: 0 1px 3px 0 #cfd7df;
                      }

                      .StripeElement--invalid {
                        border-color: #fa755a;
                      }

                      .StripeElement--webkit-autofill {
                        background-color: #fefde5 !important;
                      }
                    </style>

                    {{! <div class="form-group">
                          <input type="text" name="nameoncard" id="nameoncard" placeholder="Name on card" check-if-name ng-model='nameOnCard' class="form-control">
                        </div>
                        <div class="form-group">
                          <input type="text" name="cardnumber" check-if-number ng-model="cardNumber" id="cardnumber" placeholder="Card number" class="form-control">
                        </div>
                        <div class="form-group row">
                                <div class="col-md-4">
                                    <input type="text" class="form-control" autocomplete="off" maxlength="3"  title="Three digits at back of your card" required="" check-if-number ng-model="cardCvv" id="cvv" placeholder="CVC">
                                </div>
                                <div class="col-md-4">
                                    <select class="form-control" id="expMonth" ng-model='monthSelect' ng-options='month for month in months' name="cc_exp_mo" size="0">
                                      <option value="">MM</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <select ng-model="yearSelect" id="expYear" ng-options="year for year in years" class="form-control" name="cc_exp_yr" id="cc_exp_yr" size="0">
                                      <option value="">YYYY</option>
                                    </select>
                                </div>
                          </div> }}
                  </div>
                </div>
                {{! <h4>BILLING ADDRESS</h4>
                           <div class="row">
                              <div class="col-lg-12">
                                 <div class="form-group">
                                    <input type="text" class="form-control" id="address_1" placeholder="Address line 1">
                                 </div>
                                 <div class="form-group">
                                    <input type="text" class="form-control" id="address_2" placeholder="Address line 2">
                                 </div>
                                 <div class="form-group row">
                                    <div class="col-md-6">
                                       <input type="text" class="form-control" id="city" placeholder="City">
                                    </div>
                                    <div class="col-md-6">
                                       <input type="text" class="form-control" id="state" placeholder="State">
                                    </div>
                                 </div>
                                 <div class="form-group row">
                                    <div class="col-md-6">
                                       <input type="text" class="form-control" id="country" placeholder="Country">
                                    </div>
                                    <div class="col-md-6">
                                       <input type="text" class="form-control" id="postcode" ng-model='postCode' placeholder="Postcode" check-if-number>
                                    </div>
                                 </div>
                              </div>
                           </div> }}
                <div class="form-group">
                  {{#if login}}
                    <input
                      type="text"
                      class="form-control"
                      id="pay-email"
                      placeholder="Enter Email"
                      value="{{email}}"
                      disabled
                    />
                  {{else}}
                    <input
                      type="text"
                      class="form-control"
                      id="pay-email"
                      placeholder="Enter Email"
                    />
                  {{/if}}
                </div>
                <div class="row">
                  <div class="col-lg-12">
                    <div class="form-group">
                      <input
                        type="hidden"
                        name="_csrf"
                        id="_csrf"
                        value="{{csrfToken}}"
                      />
                      <input
                        type="hidden"
                        name="_creatorEmail"
                        id="_creatorEmail"
                        value="{[{creatorEmail}]}"
                      />
                      <input
                        type="hidden"
                        id="tippeename"
                        value="{[{header}]}"
                      />
                      <input
                        type="hidden"
                        id="description"
                        value="{[{creatorDescription}]}"
                      />
                      <input
                        type="hidden"
                        id="imgLocation"
                        value="{[{image}]}"
                      />
                      <input type="hidden" id="user_id" value="{[{user_id}]}" />
                      <button
                        type="submit"
                        id="sendTipButton"
                        class="btn btn-lg btn-block"
                      >
                        SEND
                        <span style="color : #fff" ng-show="tipValue">
                          $ {[{tipValue}]}
                        </span>
                        TIP!
                      </button>
                    </div>
                  </div>
                </div>
              </form>
              {{! Preparing the Stripe card element }}
              <script src="/javascripts/sources/cardprepare.js"></script>
              <script src="/javascripts/sources/paywith_saved_card.js"></script>
              <script src="/javascripts/sources/jquery-functions-1.js"></script>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="shareTip" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="recieve-title">
              Tip Recieved!
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">
                &times;
              </span>
            </button>
          </div>
          <div class="modal-body">
            <div class="row">
              <div class="col-md-3">
                <img
                  src=""
                  alt=""
                  class="rounded-circle"
                  height="100px"
                  width="100px"
                  id="tippeeImgLocation"
                />
              </div>
              <div class="col-md-9">
                <q>
                  <span id="tippeesDesc">
                    Thank you for your support!
                  </span>
                </q>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-md-12">
                <p class="text-center" id="desc1">
                  Your tip was successfully sent to
                  <span id="tippeesName">{{CreatorName}}</span>
                  .
                </p>
                <p class="text-center" id="desc2">
                  share your tip and share the love!
                </p>
                <a class="text-center" href="" id="receipt_link">
                  View the receipt
                </a>
              </div>
            </div>
            <div class="form-group">
              <button class="btn btn-primary form-control" id="facebook">
                <i id="i" class="fab fa-facebook-f"></i>
                Share
                it on Facebook
              </button>
              <button class="btn btn-primary form-control" id="twitter">
                <i class="fab fa-twitter"></i>
                Tweet it!
              </button>
            </div>
          </div>
          {{! <div class="modal-footer"></div> }}
        </div>
      </div>
    </div>

    <div class="modal fade" id="tipSuccess" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="recieve-title">
              Tip Recieved!
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">
                &times;
              </span>
            </button>
          </div>
          <div class="modal-body">
            <div class="tip_bill">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>