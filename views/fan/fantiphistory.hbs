<div class="container">
  <link rel="stylesheet" href='/css/userProfile.css' />
  <div class="row" style="margin-top:1%;">
    <dir class="col-sm-3" style="border-right : 1px double gray">
      <ul class="list-group">
        <li class="list-group">
          <span> <a href="/profile"> <img src="{{imagePath}}" alt="..." class="rounded-circle" height="50px"
                width="50px"></a>
            <a href="/editImage" class="glyphicon glyphicon-pencil"></a></span>
          <p>{{name}}</p>
        </li>
        <li class="list-group">
          <a href="/editfanprofile" id="editPLink"><i class="fas fa-edit"></i>Edit Profile</a>
        </li>
        {{!-- <li class="list-group">
                    <a href="/notifications"><i class="fas fa-envelope"></i>Notifications</a>
                </li>
                <li class="list-group">
                    <a href=""><i class="fas fa-certificate"></i>Offers</a>
                </li> --}}
        <li class="list-group">
          <a href="/messages" id="editPLink"><i class="fas fa-comments"></i>Messages</a>
        </li>
        <li class="list-group">
          <a href="/fantiphistory" id="editPLink"><i class="fas fa-book"></i>Tip History</a>
        </li>
        {{!-- <li class="list-group">
                    <a href=""><i class="fas fa-money-check-alt"></i>Account Balance</a>
                </li>
                <li class="list-group">
                    <a href=""><i class="fas fa-users"></i>Groups</a>
                </li> --}}
        <div class="dropdown-divider"></div>
        <li class="list-group">
          {{#if isCreator}}
          <a href="/creatorprofile">Go to Creator Profile</a>
          {{else}}
          <button type="button" class="btn btn-success" data-toggle="modal" data-target="#createCreatorProfile">Become a
            Creator</button>
          {{/if}}
        </li>
      </ul>
    </dir>
    <div class="col-sm-9 ">
      <input id="fan_history" type="hidden" value="fan" />
      <div id="fan_history_base"></div>

      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              ...
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>


      <script src="/javascripts/tip_history.js"></script>

    </div>
  </div>
</div>