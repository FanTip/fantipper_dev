<div class="container">
    <input type="hidden" value="{{csrfToken}}">
    <div class="row">
        <div class="col-lg-3" style="border-right : 1px double gray">
            <h2>Creator Profile</h2>
            <ul class="list-group">
                <li class="list-group">
                    <span> <a href="/creatorprofile"> <img src="{{imagePath}}" alt="..." class="rounded-circle" height="50px" width="50px"></a>
                </li>
                <li class="list-group">
                    <a href="/creatorprofile/preview"><i class="fas fa-desktop"></i>Preview creator page</a>
                </li>
                <li class="list-group">
                    <a href="/selectactivecreator"><i class="fas fa-user-edit"></i>Edit Creator Profile</a>
                </li>
                <li class="list-group">
                    <a href=""><i class="fas fa-envelope"></i>Notifications</a>
                </li>
                <li class="list-group">
                    <a href=""><i class="fas fa-certificate"></i>Offers</a>
                </li>
                <li class="list-group">
                    <a href=""><i class="fas fa-comments"></i>Messages</a>
                </li>
                <li class="list-group">
                    <a href="/creatortiphistory"><i class="fas fa-book"></i>Tip History</a>
                </li>
                <li class="list-group">
                    <a href=""><i class="fas fa-money-check-alt"></i>Account Balance</a>
                </li>
                <li class="list-group">
                    <a href=""><i class="fas fa-users"></i>Groups</a>
                </li>
                <li class="list-group">
                    <div class="dropdown-divider"></div>
                    <a href="/profile">Back to fan profile</a>
                </li>
            </ul>


        </div>
        <div class="col-lg-9">
            <div class="container-fluid body-content">
                <div class="row" id="rowOpacity">
                    <div class="creator-head text-center" style="background-image: url({{creatorBack}})">
                        <div>
                            <img src="../{{creatorTile}}" class="img-circle" alt="{{creatorTile}}">
                            <h2>{{CreatorName}}</h2>
                            <h4>{{location}}</h4>
                            <h3>
                                <span class="category-token">Design</span>
                                <span class="category-token">Design</span>
                            </h3>
                            <div class="creator-share">
                                <button id="share-facebook"><i class="fab fa-facebook-f"></i>Share</button>
                                <button id="share-twitter"><i class="fab fa-twitter"></i>Tweet</button>
                                <button id="share-url"><i class="fas fa-paperclip"></i>{{CreatorURL}}</button>
                            </div>
                        </div> 
                    </div>
                </div>

                <div class="creator-content container">
                    <div class="row">
                        <div class="col-md-7 creator-main">
                            <div id="about">
                                <h4>about</h4>
                                {{{CreatorAbout}}}
                            </div>
                            <div id="gallery">
                                <h4>Gallery</h4>
                            </div>
                            <div id="members">
                                <h4>Members</h4>
                            </div>
                        </div>
                        <div class="col-md-5 creator-sidebar">
                            <a href="/tips">
                                <div class="btn-tip-listing"></div>
                            </a>
                            <div class="creator-tips-total">
                                <h5>Tips</h5>
                                <p class="total">3</p>
                                <h5>$</h5>
                                <p class="total">3</p>
                                <p class="target-text">{{CreatorDesc}}</p>
                            </div>
                            <div id="creatorFans">
                                <div class="top-fan-list scrollable">
                                    <h3><i class="fa fa-heart"></i>Top fans</h3>
                                    <ul>
                                        <li>
                                            <img src="" alt="">
                                            <div class="vertical-align">
                                                <p class="top-fan-list-name"></p>
                                                <p class="top-fan-list-tip"></p>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row creator-lower">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-7 recent-comments" id="CreatorRecentComments">
                                <h3> <i class="fa fa-comment"></i>0 messages</h3>
                                <ul>
                                    <li>
                                        <img src="" alt="">
                                            <div class="comment">
                                                <p></p>
                                                <small></small>
                                            </div>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-5 creator-sidebar">
                                <div class="fans scrollable">
                                    <div class="row">
                                        <h3> <i class="fa fa-users"></i> 0 Fans </h3>
                                        <div class="pull-left scroll-up"> <i class="fa fa-angle-up"></i></div>
                                        <div class="pull-right scroll-down"> <i class="fa fa-angle-down"></i> </div>
                                    </div>
                                        
                                    <ul class="fan-list"> 
                                        <li>
                                            
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-12 creator-become-a-fan ">
                            <hr>
                            <h3>become a fan of {{CreatorName}} and leave a message of support!</h3>
                            <div class="row">
                                <div class="col-lg-12">
                                    <a id='tip-button' href="/tips" class="btn-tip-listing">
                                        <div class="btn-tip-listing"></div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
